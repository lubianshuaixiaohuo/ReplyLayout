<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp">

    <TextView
        android:id="@+id/reply_firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/reply_replyString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/reply_firstName"
        android:text="回复："
        />

    <TextView
        android:id="@+id/reply_secondName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/reply_replyString"
        />

    <TextView
        android:id="@+id/reply_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/reply_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reply_firstName"
        android:layout_marginTop="10dp"
        android:paddingBottom="5dp"
        />

    <TextView
        android:id="@+id/reply_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/reply_content"
        android:background="#000000"/>
</RelativeLayout>
